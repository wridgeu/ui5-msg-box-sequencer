<mvc:View
	controllerName="Demo.App"
	displayBlock="true"
	xmlns:mvc="sap.ui.core.mvc"
	xmlns:l="sap.ui.layout"
	xmlns:core="sap.ui.core"
	xmlns="sap.m">
	<App id="app">
		<Page title="ShowCase of putting MessageBoxes in sequence">
			<l:BlockLayout background="Light">
				<l:BlockLayoutRow>
					<l:BlockLayoutCell>
						<core:Icon color="#1873B4" src="sap-icon://sap-ui5" size="5rem"
							class="sapUiSmallMarginBottom" width="100%" />
						<Title level="H1" titleStyle="H1" text="游분游분Try it out!游분游분" width="100%"
							textAlign="Center" />
					</l:BlockLayoutCell>
				</l:BlockLayoutRow>
				<l:BlockLayoutRow>
					<l:BlockLayoutCell>
						<FlexBox direction="Column" alignItems="Stretch" justifyContent="Center"
							wrap="Wrap" class="sapUiSmallMarginBottom">
							<Input id="input0" value="This is some test text, number 1"></Input>
							<Input id="input1" value="This is some test text, number 2"></Input>
							<Input id="input2" value="This is some test text, number 3"></Input>
							<Input id="input3" value="This is some test text, number 4"></Input>
							<Input id="input4" value="This is some test text, number 5"></Input>
							<Button width="100%" text="Start Demo" press=".onButton"></Button>
						</FlexBox>
					</l:BlockLayoutCell>
				</l:BlockLayoutRow>
			</l:BlockLayout>
		</Page>
	</App>
</mvc:View>